<script type="text/javascript">
	/**
	function upImg(data){
		alert($("textarea[name='textarea"+data+"']").val());
	}**/
	
	$(".myindexslide").on('click','input[name="add"]',function(){
		if($(".myindexslide input[name='add']").val("")=="提交图片" && ""==$(this).val()){
			alert("请选择需要上传的图片");
		}else{
			//获得图片说明
			var cls = $(this).parent().parent().prev().find('.ptextarea').attr('class').split(' ')[1];
			var formData = new FormData($('#'+cls)[0]);
			formData.append('index',cls.substring(8,cls.lenght))
		   $.ajax({  
		        url: "update/uploadfile.do" ,  
		        type: "POST",  
		        data: formData,  
		        async: false,  
		        cache: false,  
		        contentType: false,  
		        processData: false,  
		        success: function (returndata) {  
		            alert(returndata);  
		        },  
		        error: function (returndata) {  
		            alert(returndata);  
		        }  
		    });  
	     
		}
	});
	$(".myindexslide").on('click','input[name="del"]',function(){
		$(this).parent().parent().prev().find('.ptextarea').html('');
		$(this).parent().parent().find('input[name="pic"]').val('');
		$(".myindexslide input[name='add']").val("提交移除图片");
	});
	$(".myindexslide").on('change','input[name="pic"]',function(){
		var apng = $(this).val().split("\.");
		if(apng[apng.length-1]=='png' ||apng[apng.length-1]=='jpg'){
			$(this).parent().parent().prev().find('.ptextarea').html('<img src="'+getObjectURL(this.files[0])+'" width="100%" height="100%" border="0">');
			$(".myindexslide input[name='add']").val("提交图片");
		}else{
			alert('请选择png或jpg格式图片');
			$(this).val("");
		}
	});
	
	function getObjectURL(file) {
		var url = null ;
		if (window.createObjectURL!=undefined) { // basic
			url = window.createObjectURL(file);
		} else if (window.URL!=undefined) { // mozilla(firefox)
			url = window.URL.createObjectURL(file);
		} else if (window.webkitURL!=undefined) { // webkit or chrome
			url = window.webkitURL.createObjectURL(file);
		}
		return url ;
	}
</script>
